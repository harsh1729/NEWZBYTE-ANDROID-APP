    <LinearLayout
        android:id="@+id/llyt_hrline"
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlytSettings"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >

        
   </LinearLayout>
        <ScrollView
        android:id="@+id/scrollViewCat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_below="@+id/rlytSettings"
        android:layout_margin="0dp" >

       <LinearLayout
            android:id="@+id/llytCatContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <ImageView 
     	android:id="@+id/btnCatAll"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:padding="10dp"
    	android:background="@drawable/viewall_selected" 
    	android:clickable="true"
    	android:scaleType="fitXY" 
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    	android:onClick="onClickAllCategory" />
            	
            
            </LinearLayout>
            
     	</ScrollView>   
 
    </RelativeLayout>
 
</in.newzbyte.app.Custom_DrawerLayout>

