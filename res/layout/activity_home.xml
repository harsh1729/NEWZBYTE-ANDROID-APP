<in.newzbyte.app.Custom_DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >


    <RelativeLayout
        android:id="@+id/rlytMainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <RelativeLayout
        android:id="@+id/rlytNewsContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        </RelativeLayout>
            
		        <Button 
		     	android:id="@+id/btnMenu"
		        android:layout_width="50dp"
		    	android:layout_height="50dp"
		    	android:background="@drawable/menu1" 
		    	android:layout_marginTop="5dp"
		    	android:layout_marginLeft="5dp"
		    	android:layout_alignParentTop="true"
		    	android:layout_alignParentLeft="true"
		    	android:onClick="onClickMenu" />
		        
		        <ImageView 
		        android:id="@+id/imgSettingsCog"
		        android:layout_width ="35dp"
				android:layout_height ="35dp"
				android:layout_marginTop="10dp"
		    	android:layout_marginRight="5dp"
				android:clickable="true"
		    	android:layout_alignParentTop="true"
		    	android:layout_alignParentRight="true"
				android:src="@drawable/settings"
				android:onClick="onClickSettings"/>
		        
		    	<in.xercesblue.arcmenu.ArcMenu
		            android:id="@+id/arcMenu1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="5dp"
		            android:layout_marginBottom="5dp"
			        custom:childSize="@dimen/menuChildSize"
					custom:fromDegrees="@dimen/menuFromDegrees"
					custom:toDegrees="@dimen/menuToDegrees"
		            android:layout_alignParentRight="true"
		            android:layout_alignParentBottom="true">
		        </in.xercesblue.arcmenu.ArcMenu>
   </RelativeLayout>
    
    
 
    <!-- The navigation drawer -->
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlytDrawerPane"
        android:background="@color/app_offwhite"
        android:layout_marginLeft="-65dp"
        android:layout_gravity="left"> 
        
       <!-- Settings bar -->
       <RelativeLayout  
            android:id="@+id/rlytSettings"
            android:layout_width ="match_parent"
        	android:layout_height ="wrap_content"
        	android:layout_alignParentTop="true"
        	android:padding="10dp">
            
            <ImageView 
                android:layout_width ="40dp"
        		android:layout_height ="40dp"
        		android:clickable="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/share_plus"
        		android:onClick="onClickSettings"/>
        </RelativeLayout>
