<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytHomeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlytImgContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="0dp"
            android:background="@drawable/tansparent_triangle"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp" >

            <TextView
                android:id="@+id/txtHeadingCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CATEGORY"
                android:textColor="@color/app_white"
                android:textSize="@dimen/font_lbl_small"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtAuthorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text="by"
                    android:textColor="@color/app_lightgray"
                    android:textSize="@dimen/font_lbl_very_small" />

                <TextView
                    android:id="@+id/txtAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/app_darkgray"
                    android:textSize="@dimen/font_lbl_very_small" />

                <TextView
                    android:id="@+id/txtNewsTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_lightgray"
                    android:textSize="@dimen/font_lbl_very_small" />
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                 <TextView
            android:id="@+id/txtSourceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="source"
            android:textColor="@color/app_lightgray"
            android:textSize="@dimen/font_lbl_very_small" />

        <TextView
            android:id="@+id/txtSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
       		 android:maxLines="3"
            android:textColor="@color/app_darkgray"
            android:textSize="@dimen/font_lbl_very_small" 
            android:text=""/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout 
      android:id="@+id/llytTextContainer"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/txtHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="10dp"
        android:textSize="@dimen/font_lbl_normal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:maxLines="10"
        android:layout_weight="1"
        android:textColor="@color/app_darkgray"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="@dimen/font_lbl_small_medium1" />
    
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp" >

        <TextView
        android:id="@+id/txtTapToread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Tap to read more ..."
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@color/app_black"
        android:textSize="@dimen/font_lbl_small_medium1" />
        
        <!-- <ImageView
            android:id="@+id/imgShareHome"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onClickShare"
            android:scaleType="centerCrop"
            android:src="@drawable/selector_share_black_to_white" /> -->


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llytFooterLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_lightgray"
        android:orientation="horizontal" >
    </LinearLayout>
</LinearLayout>
</LinearLayout>