<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytSettingsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout  
            android:id="@+id/rlytSettings"
            android:layout_width ="match_parent"
        	android:layout_height ="wrap_content"
        	android:padding="10dp">
        	
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Settings"
            android:textSize="@dimen/font_lbl_large"
    		android:textStyle="bold"   	
            android:layout_centerInParent="true"
            android:textColor="#f4f5f9"/>
        
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Done"
            android:paddingLeft="10dp"
         	android:paddingRight="10dp"
         	android:paddingTop="15dp"
         	android:paddingBottom="15dp"
            android:textSize="@dimen/font_lbl_small"
    		android:textStyle="bold"
    		android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:textColor="@color/app_verylightgray"
            android:onClick="onClickSettings2"/>
            
          <!--   <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:clickable="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/setting_black"
        		android:onClick="onClickSettings2"/> -->
        </RelativeLayout>
    
    <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="match_parent">
        <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/bg_round_dark2"
		 android:layout_margin="10dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:orientation="vertical">
            <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="15dp"
         android:paddingBottom="15dp"
         android:layout_marginTop="10dp"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickNotification"
         android:background="@drawable/selector_rounded_corner_dark1">
         
        <ImageView 
            android:id="@+id/imgNotification1"
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_alignParentLeft="true"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/notificationturn_off2"
        		/>
        
        <TextView android:id="@+id/txtNotification"
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@+id/imgNotification1"
    				android:text ="NOFICATION ON"
    				android:layout_centerVertical="true"
    				android:textSize="@dimen/font_lbl_small"
    				android:textStyle="bold"
    				android:textColor="@color/app_verylightgray"
    				/>
        <ImageView 
            android:id="@+id/imgNotification2"
                android:layout_width ="63dp"
        		android:layout_height ="30dp"
        		android:clickable="true"
         		android:onClick="onClickNotification"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/notification_on"
        		/>
        
    </RelativeLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="15dp"
         android:paddingBottom="15dp"
         android:layout_marginTop="10dp"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickRateApp"
         android:background="@drawable/selector_rounded_corner_dark1">
        
        <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/rate"
        		/>
        
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="RATE THIS APP"
    				android:textSize="@dimen/font_lbl_small"
    				android:textStyle="bold"
    				android:textColor="@color/app_verylightgray"
    				/>
        
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="15dp"
         android:paddingBottom="15dp"
         android:layout_marginTop="10dp"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickShareApp"
         android:background="@drawable/selector_rounded_corner_dark1">
         
         <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/share_white"
        		/>
         
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="SHARE THIS APP"
    				android:textSize="@dimen/font_lbl_small"
    				android:textStyle="bold"
    				android:textColor="@color/app_verylightgray"
    				/>
        
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="15dp"
         android:paddingBottom="15dp"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickPrivacyPolicy"
         android:background="@drawable/selector_rounded_corner_dark1">
         
        <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/privacy_policy"
        		/>
         
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="DISCLAIMER"
    				android:textSize="@dimen/font_lbl_small"
    				android:textStyle="bold"
    				android:textColor="@color/app_verylightgray"
    				/>
         
        
        
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    
    
    
    
    
</LinearLayout>