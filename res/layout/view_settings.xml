    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Check Out Hatke News On"
        android:textColor="@color/app_black_dark"
        android:textSize="@dimen/font_lbl_very_large"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgLogoName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/newzbyte" />

    <TextView
         android:id="@+id/txtSeeYouAt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Everyday At"
        android:textColor="@color/app_black_dark"
        android:textSize="@dimen/font_lbl_very_large"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgWatch"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/watch_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_orange"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_settings_options"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClickLanguageChange"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/imglanguage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/language" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imglanguage"
                    android:layout_centerVertical="true"
                    android:text="Change Language"
                    android:textColor="@color/app_white"
                    android:textSize="@dimen/font_lbl_normal"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/txtLanguageSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/font_lbl_normal"
                    android:textStyle="bold"
                    android:textColor="@color/app_green"
                    android:text="English"
                    android:clickable="true"
                    android:onClick="onClickLanguageChange" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_white"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_settings_options"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClickNotification"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:id="@+id/imgNotification1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/notification_off1" />

                <TextView
                    android:id="@+id/txtNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgNotification1"
                    android:text="Notifications"
                    android:textColor="@color/app_white"
                    android:textSize="@dimen/font_lbl_normal"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgNotification2"
                    android:layout_width="56dp"
                    android:layout_height="30dp"
                    android:padding="0dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:onClick="onClickNotification"
                    android:src="@drawable/notification_on" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_white"
                android:orientation="horizontal" >
            </LinearLayout>
