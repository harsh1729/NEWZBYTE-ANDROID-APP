<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llytSettingsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/app_white"
    android:orientation="vertical" >
    
<!--     android:background="@drawable/bg_settings" -->

    <RelativeLayout  
            android:id="@+id/rlytSettings"
            android:layout_width ="match_parent"
        	android:layout_height ="wrap_content"
        	android:padding="10dp">
        	
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Settings"
            android:textSize="@dimen/font_lbl_large"
    		android:textStyle="bold"   	
            android:layout_centerInParent="true"
            android:textColor="@color/app_black_dark"/>
        <ImageView 
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@drawable/arrow_up"
    		android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:onClick="onClickSettings2"/>
        <!--  <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Done"
            android:paddingLeft="10dp"
         	android:paddingRight="10dp"
         	android:paddingTop="15dp"
         	android:paddingBottom="15dp"
            android:textSize="@dimen/font_lbl_small"
            android:background="@drawable/selector_settings_options"
    		android:textStyle="bold"
    		android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:textColor="@color/app_black_dark"
            android:onClick="onClickSettings2"/>
            
           <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:clickable="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/setting_black"
        		android:onClick="onClickSettings2"/> -->
        		
        </RelativeLayout>
      
   <LinearLayout
        android:id="@+id/llyt_hrline"
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_below="@+id/rlytSettings"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >
   </LinearLayout>
    <ImageView
        android:id="@+id/imgLogoName"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/newzbyte" />
    
    
    <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1">
        <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
		 android:layout_margin="10dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:orientation="vertical">
            <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:layout_marginTop="10dp"
         android:gravity="center_vertical"
         android:background="@drawable/selector_settings_options"
         android:clickable="true"
         android:onClick="onClickNotification">
         
        <ImageView 
            android:id="@+id/imgNotification1"
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_alignParentLeft="true"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/notification_off1"
        		/>
        
        <TextView android:id="@+id/txtNotification"
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@+id/imgNotification1"
    				android:text ="Notifications"
    				android:layout_centerVertical="true"
    				android:textSize="@dimen/font_lbl_normal"
    				android:textColor="@color/app_black_dark"
    				android:textStyle="bold"
    				/>
        <ImageView 
            android:id="@+id/imgNotification2"
                android:layout_width ="63dp"
        		android:layout_height ="30dp"
        		android:clickable="true"
         		android:onClick="onClickNotification"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/notification_on"
        		/>
        
    </RelativeLayout>
     <LinearLayout
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:gravity="center_vertical"
         android:background="@drawable/selector_settings_options"
         android:clickable="true"
         android:onClick="onClickRateApp">
        
        <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/rate"
        		/>
        
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="Rate This App"
    				android:textSize="@dimen/font_lbl_normal"
    				android:textColor="@color/app_black_dark"
    				android:textStyle="bold"
    				/>
        
    </LinearLayout>
    <LinearLayout
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:gravity="center_vertical"
         android:background="@drawable/selector_settings_options"
         android:clickable="true"
         android:onClick="onClickShareApp">
         
         <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/share"
        		/>
         
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="Share This App"
    				android:textSize="@dimen/font_lbl_normal"
    				android:textColor="@color/app_black_dark"
    				android:textStyle="bold"
    				/>
        
    </LinearLayout>
    <LinearLayout
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:background="@drawable/selector_settings_options"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickPrivacyPolicy">
         
        <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/disclaimer"
        		/>
         
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="Disclaimer"
    				android:textStyle="bold"
    				android:textSize="@dimen/font_lbl_normal"
    				android:textColor="@color/app_black_dark"
    				/>

    </LinearLayout>
    <LinearLayout
	    android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/app_lightgray"
        android:layout_height="1dp" >
    </LinearLayout>
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         android:paddingTop="10dp"
         android:paddingBottom="10dp"
         android:layout_marginBottom="10dp"
         android:background="@drawable/selector_settings_options"
         android:gravity="center_vertical"
         android:clickable="true"
         android:onClick="onClickLanguageChange">
         
        <ImageView 
                android:layout_width ="30dp"
        		android:layout_height ="30dp"
        		android:padding="5dp"
        		android:layout_marginRight="10dp"
        		android:src="@drawable/language"
        		android:scaleType="fitCenter"
        		/>
         
         <TextView 
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="Change Language"
    				android:textStyle="bold"
    				android:textSize="@dimen/font_lbl_normal"
    				android:textColor="@color/app_black_dark"
    				/>

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

    
</LinearLayout>