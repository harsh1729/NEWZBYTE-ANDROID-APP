<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="onClickCategoryItem"
    android:background="@drawable/bg_rounded_shadow"
    android:layout_margin="5dp" >
    
    <ImageView 
        android:id="@+id/imgViewCat"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="4dp"
    	android:scaleType="centerCrop"
    	android:padding="0dp"/>
    
     <LinearLayout 
        android:id="@+id/llytCatTextContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:paddingBottom="15dp"
    	>
    	
    <TextView android:id="@+id/txtCategory"
        			android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:text ="CATEGORY"
    				android:textSize="@dimen/font_lbl_very_small"
    				android:textStyle="bold"
    				android:textColor="@color/app_white"
    				android:paddingLeft="8dp"
    				android:paddingRight="8dp"
    				/>
        
    </LinearLayout>
</RelativeLayout>
